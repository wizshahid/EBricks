@model IEnumerable<ModelLayer.Product>

@{
    ViewBag.Title = "Index";
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            
            <img class="d-block w-100" src="@Url.Content(Model.FirstOrDefault().ProductImages.FirstOrDefault().ImagePath)" alt="First slide">
        </div>
        @foreach (var item in Model.Skip(1))
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@Url.Content(item.ProductImages.FirstOrDefault().ImagePath)" alt="Second slide">
            </div>
        }

    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container">
    <h2>Featured Products</h2>
    <hr />
    <div style="display: flex; flex-direction:row; flex-wrap:wrap; justify-content:space-between;">

        @foreach (var item in Model)
        {
            <div class="card col-md-4">
         <img src="@Url.Content(item.ProductImages.FirstOrDefault().ImagePath)" class="card-img-top img-responsive" style="height:200px;" alt="...">
               
                <div class="card-body">
                    <h5 class="card-title">@item.ProductCode</h5>
                    <p class="card-title"> @item.ProductName</p>
                    <p class="card-text">@item.CompanyName</p>
                    <p class="card-text">Rate Rs @item.MRP @item.Unit</p>
                    <p class="card-text"> @item.Price  @item.Unit</p>
                    @Html.ActionLink("Book Now", "BookNow", "User/Booking", new { id = @item.Id }, new { @class = "btn btn-primary" })
                </div>
            </div>
        }
    </div>
</div>

<script>
    $.ajax({
            url: "/Home/Categories",
            method: "get",
            dataType: "json",
            success: function (categories) {
                var categoryList = $('#categoryUL');
                $.each(categories, function (index, category) {
                    categoryList.append(`<li><a href="/Products/GetProducts/${category.CategoryName}">${category.CategoryName}</a></li>`);

                });

            },
            error: function (xhr) {
                alert(xhr.responseText);
            }
        });
   
</script>









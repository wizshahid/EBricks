@model IEnumerable<ModelLayer.Product>

@{
    ViewBag.Title = "GetProducts";
}

<h2>Products</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayName("Category")
        </th>
              <th>
                  @Html.DisplayName("Image")
              </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            <img src="@item.ProductImages.FirstOrDefault().ImagePath" alt="Image Not Found " class="img img-responsive" style="height:100px"/>
        </td>
        <td>
            @Html.ActionLink("Edit", "EditProduct", new { id=item.Id },new {@class="btn btn-primary" })
            @Html.ActionLink("Details", "ProductDetails", new { id=item.Id },new { @class = "btn btn-success" })
            @Html.ActionLink("Delete", "DeleteProduct", new { id=item.Id },new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
